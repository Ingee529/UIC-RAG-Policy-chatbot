# OpenAI API Configuration (for GEAR - Knowledge Graph / Triple Extraction)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here_for_gear

# Mistral API Configuration (for Metadata Extraction)
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Gemini API Configuration (for Final Answer Generation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-flash-latest

# LLM Parameters
TEMPERATURE=0.5

# Processing Configuration
BATCH_SIZE=10
REQUEST_TIMEOUT=30
RETRY_LIMIT=3
RETRY_DELAY=5

# Directories
INPUT_DIR=input_files
OUTPUT_DIR=new_embeddings_output

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chunking Strategy (auto, recursive, semantic, sliding, heading)
CHUNKING_STRATEGY=auto

# Metadata Extraction
USE_METADATA_EXTRACTION=true
METADATA_DELAY=1.0
